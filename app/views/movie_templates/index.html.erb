<h1>List of all movies</h1>

<table border="1">
<% @list_of_movies.each do |a_thing| %>
  <tr>
    <td><%= a_thing.id %></td>
    <td>
      <img src="http://robohash.org/<%= a_thing.title 
      %>">
    </td>
    <td><%= a_thing.title %></td>
    <td><%= a_thing.year %></td>
    <% @director_id = a_thing.director_id%>
    <% @movie_director = Director.where({ :id => @director_id}).at(0)%>
    <td><%= @movie_director.name%></td>
    <td>
      <a href="/movies/<%= a_thing.id %>">
        Show details
      </a>
    </td>
    

  </tr>

<% end %>
</table>
