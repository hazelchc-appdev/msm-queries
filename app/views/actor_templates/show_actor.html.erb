<h1>
  Actor #504 details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/504" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://image.tmdb.org/t/p/w500/hsCu1JUzQQ4pl7uFxAVFLOs9yHh.jpg" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at)%> ago
  </dd>
</dl>

<h2>Filmography</h2>
<table border='1'>
<% @characters.each do |a_character| %>
  <% movie_acted = Movie.where({ :id => a_character.movie_id}).at(0)%>
  
  <tr>
    <td>
      <%= movie_acted.title %>
    </td>
    <td>
      <%= movie_acted.year %>
    </td>
    <td>
      <% director_id = movie_acted.director_id %>
      <% director = Director.where({ :id => director_id}).at(0)%>
      <%= director.name%>
    </td>
    <td>
      <%= a_character.name %>
    </td>
    <td>
      <a href="/movies/<%= movie_acted.id %>">
        Show details
      </a>
    </td>

  </tr>

<% end %>
